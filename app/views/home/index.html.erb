<div class="h-feed">
  <%= render "archives/card_css", article: @articles.first, featured: false %>
  <%= render "archives/card",     article: @articles.first %>

  <% @articles[1..-1].in_groups_of(2).each do |row| %>
    <div class="row">
      <% row.each do |article| %>
      <% unless article.blank? %>
          <%= render "archives/card_css", article: article, featured: false %>
          <%= render "archives/card",     article: article %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<% if @pinned_to_home_bottom.present? %>
  <%= render "pages/pinned", page: @pinned_to_home_bottom, position: "home-bottom" %>
<% end %>
